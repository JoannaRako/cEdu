#include <stdio.h>
#define ROZMIAR 6


void podmien(int *tab){

  int i, max, min, temp;
  int maxi = 0, mini = 0;

  max = tab[0];
  min = tab[0];

  for(i = 1; i < ROZMIAR; i++){

    if(tab[i] > max){
      max = tab[i];
      maxi = i;
    }
    if(tab[i] < min){
      min = tab[i];
      mini = i;
    }
  }
  temp = tab[mini];
  tab[mini] = tab[maxi];
  tab[maxi] = temp;
}

int main()
{
  int tab[ROZMIAR] = {0};
  int i;

  printf ("Wpisz %d nowe elementy tablicy\n", ROZMIAR);

  for(i = 0; i < ROZMIAR; i++){
    scanf("%d", &tab[i]);
  }

  podmien(tab);
    
  printf("A tablica teraz wyglÄ…da tak: \n");

  for(i = 0; i < ROZMIAR; i++){
    printf ("%d\n", tab[i]);
  }
}
