#include <stdio.h>
#define ROZMIAR 6
 int main()
{
  int tab[ROZMIAR] = {0};
  int i, max, min, temp;

  printf ("Wpisz %d nowe elementy tablicy\n", ROZMIAR);

  for(i = 0; i < ROZMIAR; i++){
  scanf("%d", &tab[i]);
  }

  max = tab[0];
  min = tab[0];

  for(i = 1; i < ROZMIAR; i++){

    if(tab[i] > max)
    max = tab[i];
    if(tab[i] < min)
    min = tab[i];
  }

  temp = tab[0];
  tab[0] = tab[ROZMIAR-1];
  tab[ROZMIAR-1] = temp;

  printf("element maksymalny to %d\n",max);
  printf("element minimalny to %d\n",min);
  printf("A tablica teraz wyglÄ…da tak: \n");

  for(i = 0; i < ROZMIAR; i++){
    printf ("%d\n", tab[i]);
  }

  return 0;
}